<% total_pages = (@total_results.to_f / @per_page).ceil %>

<button id="showFavourites" class="button">
  📁 Mostra Preferiti
</button>


<div class="pagination">
  <% if @page > 1 %>
    <%= link_to "« Prima", idra_path(request.query_parameters.merge(page: 1)) %>
    <%= link_to "‹ Prev", idra_path(request.query_parameters.merge(page: @page - 1)) %>
  <% end %>

  <span>Pagina <%= @page %> di <%= total_pages %></span>

  <% if @page < total_pages %>
    <%= link_to "Next ›", idra_path(request.query_parameters.merge(page: @page + 1)) %>
    <%= link_to "Ultima »", idra_path(request.query_parameters.merge(page: total_pages)) %>
  <% end %>
</div>

